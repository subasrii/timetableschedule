	background-position: left;
	background-repeat: no-repeat;
	transition: 500ms;
}

button:before {
	content: 'submit';
	color: rgba(255,255,255,0.5);
	font-size: 16px;
	position: absolute;
	display: flex;
	align-items: center;
	justify-content: center;
